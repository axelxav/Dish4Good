<Window x:Class="Dish4Good.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Page" Height="770" Width="1440">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="387" Width="468">
                <TextBlock Text="Login" FontSize="20" Margin="0 0 0 20"/>
                <Label Content="User Type: "/>
                <ComboBox Name="myComboBox" Width="200"/>
                <Label Content="Username:"/>
                <TextBox x:Name="UsernameTextBox" Width="200" Margin="0 5"/>
                <Label Content="Password:" Margin="0 10"/>
                <PasswordBox x:Name="PasswordBox" Width="200" Margin="0 5"/>
                <Button Content="Login" Width="100" Margin="0 20" Click="LoginButton_Click"/>
                <Button Content="Register" Width="100" Height="20" Margin="0 10" Background="White" BorderBrush="White" Click="RegisterButton_Click"/>

            </StackPanel>
        </Grid>
        <Grid Grid.Column="0">
            <Rectangle Fill="Black"/>
        </Grid>

    </Grid>
</Window>
